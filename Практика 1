        "#Три наиболее часто встречающиеся буквы\n",
        "a=str(input().lower())\n",
        "l='abcdefghijklmnopqrstuvwxyz'\n",
        "arr=[0]*len(l)\n",
        "mx1=0; mx2=0; mx3=0\n",
        "b1=''; b2=''; b3=''\n",
        "for k in l:\n",
        "#    print(l.index(k), k)\n",
        "    l_ind=l.index(k)\n",
        "    a_c=a.count(k)\n",
        "    arr[l_ind]=a_c\n",
        "    if a_c>=mx1:\n",
        "        mx3=mx2; mx2=mx1; mx1=a_c\n",
        "        b3=b2; b2=b1; b1=k\n",
        "    elif a_c>=mx2:\n",
        "        mx3=mx2; mx2=a_c\n",
        "        b3=b2; b2=k\n",
        "    elif a_c>=mx3:\n",
        "        mx3=a_c\n",
        "        b3=k\n",
