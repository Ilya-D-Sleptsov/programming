        "#Решето Эратосфена\n",
        "def eratosf(n):\n",
        "    list_ = []\n",
        "    for i in range(2, n+1):\n",
        "        list_.append(i)\n",
        "    for i in list_:\n",
        "        for k in list_:\n",
        "            if k%i==0 and k!=i:\n",
        "                print(k, end=\" \")\n",
        "                list_.remove(k)\n",
        "    print(list_)\n",
        "n=int(input())\n",
        "print(eratosf(n))"
